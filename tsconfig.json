{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts", "test/**/*.ts", "src/types/express-serve-static-core.d.ts"],
  "exclude": ["node_modules"]
}